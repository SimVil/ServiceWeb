<Window x:Class="PokemonTournamentWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTournamentWPF"
        mc:Ignorable="d"
        Title="Login" Style="{StaticResource LoginWindow}">
    <Grid>
        <StackPanel Margin="8" Orientation="Vertical">
                <TextBlock Style="{StaticResource TitleLogin}">
                Connexion
                </TextBlock>

                <StackPanel Style="{StaticResource FieldLogin}">
                    <TextBlock Style="{StaticResource LineLogin}"> Login :</TextBlock>
                <TextBox Name="textbox_login" Width="200" Height="20"/>
                </StackPanel>

                <StackPanel Style="{StaticResource FieldLogin}">
                    <TextBlock Style="{StaticResource LineLogin}"> Password :</TextBlock>
                    <PasswordBox Name="Pass" Width="200" Height="20"/>
                </StackPanel>


            </StackPanel>

        <Button x:Name="btn_connexion" Content="Connexion" Style="{StaticResource ButtonLogin}" Cursor="Hand" Click="btn_connexion_Click"/>
    </Grid>
 
</Window>
