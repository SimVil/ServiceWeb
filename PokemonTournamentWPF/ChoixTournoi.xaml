<Window x:Class="PokemonTournamentWPF.ChoixTournoi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTournamentWPF"
        mc:Ignorable="d"
        Title="Lancement du tournoi" Height="100" Width="400">
    <Grid >
        <StackPanel>
            <Label HorizontalAlignment="Center">Choisissez un mode de jeu :</Label>
            <WrapPanel HorizontalAlignment="Center">
                <Button Width="110" Margin="0,0,10,0">Mode automatique</Button>
                <Button Width="110">Mode jouable</Button>
                <Button Width="110" Margin="10,0,0,0">Annuler</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
